meta {
  name: test invalid JSON response with formatting
  type: http
  seq: 19
}

post {
  url: {{httpfaker}}/api/echo/custom
  body: json
  auth: none
}

body:json {
  {
    "headers": { "content-type": "application/json" },
    "content": "hello\n\tworld"
  }
}

assert {
  res.body: eq hello\n\tworld
}

