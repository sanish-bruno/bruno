meta {
  name: Multi-format API
  type: http
}

get {
  url: https://api.example.com/data
}

headers {
  content-type: application/json
}

body:json {
  {
    "message": "API supports multiple formats"
  }
}

example {
  meta {
    name: JSON API Example
    type: http
  }
  
  post {
    url: https://api.example.com/json
  }
  
  headers {
    content-type: application/json
    authorization: Bearer json-token
  }
  
  auth:basic {
    username: jsonuser
    password: jsonpass
  }
  
  body:json {
    {
      "format": "json",
      "data": {
        "name": "JSON Example",
        "value": 123
      }
    }
  }
  
  response:status {
    code: 201
  }
  
  response:body {
    {
      "id": 1,
      "format": "json",
      "created": true
    }
  }
}

example {
  meta {
    name: XML API Example
    type: http
  }
  
  post {
    url: https://api.example.com/xml
  }
  
  headers {
    content-type: application/xml
    authorization: Bearer xml-token
  }
  
  auth:bearer {
    token: eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9
  }
  
  body:xml {
    <?xml version="1.0" encoding="UTF-8"?>
    <data>
      <format>xml</format>
      <name>XML Example</name>
      <value>456</value>
    </data>
  }
  
  response:status {
    code: 201
  }
  
  response:body {
    <?xml version="1.0" encoding="UTF-8"?>
    <response>
      <id>2</id>
      <format>xml</format>
      <created>true</created>
    </response>
  }
}

example {
  meta {
    name: Text API Example
    type: http
  }
  
  post {
    url: https://api.example.com/text
  }
  
  headers {
    content-type: text/plain
    authorization: Bearer text-token
  }
  
  auth:apikey {
    key: X-API-Key
    value: text-api-key-123
    placement: header
  }
  
  body:text {
    Plain text data
    Format: text
    Name: Text Example
    Value: 789
  }
  
  response:status {
    code: 201
  }
  
  response:body {
    Success: true
    Format: text
    ID: 3
  }
}
